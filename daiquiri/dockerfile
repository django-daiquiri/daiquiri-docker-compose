FROM centos:latest

ENV PATH=/opt:${PATH} 

RUN yum update -y && yum install -y \
    yum-utils \
    epel-release 

RUN yum makecache

RUN yum install -y \
    python36 \
    python36-devel \
    python36-pip 

RUN pip3 install --upgrade pip
RUN pip3 install --upgrade virtualenv 

RUN yum install -y\
    build-essential \
    curl \
    git \
    make \
    vim \
    libpq-dev \
    postgresql \
    postgresql-client \
    python-psycopg2


COPY ./rootfs /

RUN useradd -ms /bin/bash daiquiri
RUN chown -R daiquiri.daiquiri /home/daiquiri
USER daiquiri

CMD ["/drun.sh"]
