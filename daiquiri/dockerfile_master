FROM centos:7

# give daiquiri user same id as the
ARG UID=<UID>

ENV PATH=/vol/ve/bin:/opt:${PATH}

RUN yum update -y && yum install -y \
    yum-utils \
    epel-release \
    wget \
    sudo

RUN yum makecache

RUN yum install -y \
    python3 \
    python3-devel \
    python3-pip

RUN pip3 install --upgrade pip
RUN pip3 install --upgrade virtualenv

RUN yum install -y \
    build-essential \
    gcc \
    curl \
    git \
    make \
    vim \
    libpq-dev \
    glibc-devel \
    postgresql-libs \
    postgresql-devel \
    python3-psycopg2 \
    wp-cli \
    httpd \
    httpd-tools


# update php to 7.3
RUN wget http://rpms.remirepo.net/enterprise/remi-release-7.rpm && \
    rpm -Uvh remi-release-7.rpm && \
    yum-config-manager --enable remi-php73 && \
    yum update -y && \
    yum install -y php-mysql \
    php-pear && \
    pear channel-update pear.php.net && \
    pear install http_request2


RUN pip3 install gunicorn

# remove autogenerated site from apache
RUN rm /etc/httpd/conf.d/*

COPY ./rootfs /
RUN mkdir -p /etc/httpd/vhosts.d
COPY ./conf/vhost.conf /etc/httpd/vhosts.d/vhost.conf
COPY /conf/httpd.conf /etc/httpd/conf/httpd.conf

RUN useradd -m -u ${UID} -s /bin/bash daiquiri && \
    usermod -G apache daiquiri

# give daiquiri user sudo permissions without password
RUN echo "daiquiri ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

USER daiquiri

CMD ["/drun.sh"]
